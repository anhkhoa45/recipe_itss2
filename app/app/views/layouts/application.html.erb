                        <a href="#" data-toggle="tooltip" data-placement="bottom" title="Linkedin"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-lg-5 col-xl-4">
                    <!-- Top Search Area -->
                    <div class="top-search-area">
                        <form action="#" method="post">
                            <input type="search" name="top-search" id="topSearch" placeholder="Search">
                            <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navbar Area -->
    <div class="bueno-main-menu" id="sticker">
      <div class="classy-nav-container breakpoint-off">
        <div class="container">
          <!-- Menu -->
          <nav class="classy-navbar justify-content-between" id="buenoNav">

            <!-- Toggler -->
            <div id="toggler"><img src="/assets/core-img/toggler.png" alt=""></div>

            <!-- Navbar Toggler -->
            <div class="classy-navbar-toggler">
              <span class="navbarToggler"><span></span><span></span><span></span></span>
            </div>

            <!-- Menu -->
            <div class="classy-menu container-fluid">
              <div class="row">
                <div class="col-lg-3">
                  <a class="logo" href="/">
                    <img class="img-fluid" src="/assets/core-img/logo.png" alt="">
                  </a>
                  <!-- Close Button -->
                  <div class="classycloseIcon">
                    <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                  </div>
                </div>

                <!-- Nav Start -->
                <div class="classynav col-lg-9">
                  <ul>
                    <li><%= link_to("Home", home_url) %></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Categories</a>
                      <ul class="dropdown">
                        <% Category.all.each do |category| %>
                        <li><%= link_to(category.name, "#")  %></li>
                        <% end %>
                      </ul>
                    </li>
                    <li><a href="/recipes">Recipes</a></li>
                    <li><a href="contact.html">Contact</a></li>
                  </ul>

                  <!-- Login/Register -->
                  <div class="login-area">
                    <% if user_signed_in? %>
                      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>   
                    <% else %>
                      <%= link_to("Login / Register","/users/sign_in") %> 
                    <% end %>
                  </div>
                </div>
                <!-- Nav End -->
              </div>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </header>

