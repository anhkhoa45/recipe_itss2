            <input type="checkbox" class="custom-control-input" id="<%= 'customCheck' + idx.to_s %>">
            <label class="custom-control-label" for="<%= 'customCheck' + idx.to_s %>"><%= ingredient.name + ': ' + ingredient.amount.to_s + ingredient.unit %></label>
          </div>
          <%end %>
