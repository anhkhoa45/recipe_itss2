<%= form_for(@comment.replies.build, :url => url_for(:controller => 'comments', :action => 'create'), method: "post") do |f| %>
<%= f.hidden_field :comment_id, value: current_comment.id%>
<% if user_signed_in? %>
  <%= f.hidden_field :user_id , value: current_user.id %>
<% end %>
          <div class="col-12">
          <%= f.text_area :content, class: "form-control rounded-0", cols: "30", rows: "10", placeholder: "Message" %>
          </div>
          <div class="col-12">
            <button class="btn bueno-btn mt-30" type="submit">Submit Comment</button>
          </div>
<% end %>
