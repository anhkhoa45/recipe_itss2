<%= form_for(@comment, :url => url_for(:controller => 'comments', :action => 'create'), method: "post") do |f| %>
<%= f.hidden_field :recipe_id %>
<% if user_signed_in? %>
  <%= f.hidden_field :user_id , value: current_user.id %>
<% end %>
<div class="post-a-comment-area mb-30 clearfix">
      <!-- Reply Form -->
      <div class="contact-form-area">
        <form action="#" method="post">
          <div class="col-12">
          <%= f.text_area :content, class: "form-control", cols: "30", rows: "10", placeholder: "Your comment..." %>
          </div>
          <div class="col-12">
            <button class="btn bueno-btn mt-30" type="submit">Submit Comment</button>
          </div>
      </div>
      </form> 
    </div>
<% end %>


