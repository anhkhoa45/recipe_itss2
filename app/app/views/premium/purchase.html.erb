<div class="container premium-page">
  <div class="row">
    <div class="payment-title col-md-12 mt-50 mb-50">
      <h1>Payment Information</h1>
    </div>
    <div class="creditcard col-md-6 mt-5">
      <%= render 'card_svg' %>
    </div>
    <div class="col-md-6">
      <%= form_tag post_purchase_premium_path, method: :post, class: 'form-container' do %>
        <div class="field-container">
          <label for="name">Name</label>
          <input id="name" maxlength="20" type="text" required>
        </div>
        <div class="field-container">
          <label for="cardnumber">Card Number</label>
          <input id="cardnumber" type="text" pattern="[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}" inputmode="numeric" required>
        </div>
        <div class="field-container">
          <label for="expirationdate">Expiration (mm/yy)</label>
          <input id="expirationdate" type="text" pattern="[0-9]{2}/[0-9]{2}" inputmode="numeric" required>
        </div>
        <div class="field-container">
          <label for="securitycode">Security Code</label>
          <input id="securitycode" type="text" pattern="[0-9]{3}" inputmode="numeric" required>
        </div>
        <div class="full-width mt-3">
          <%= submit_tag "Submit", class: "btn btn-primary" %>
          <!-- <button class="btn btn-primary" type="submit">Submit</button> -->
        </div>
      <% end %>
    </div>
  </div>
</div>
